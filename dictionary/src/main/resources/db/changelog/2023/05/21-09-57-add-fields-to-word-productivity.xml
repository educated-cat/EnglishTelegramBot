<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
	<changeSet id="21-09-57-add-fields-to-word-productivity" author="Ilya Malyshev">
		<addColumn tableName="word_productivity">
			<column name="learn_timestamp" type="timestamp"/>
			<column name="repeating_status" type="varchar(8)" defaultValue="TO_LEARN">
				<constraints nullable="false"/>
			</column>
			<column name="failed_attempts_count" type="integer" defaultValueNumeric="0">
				<constraints nullable="false"/>
			</column>
			<column name="success_attempts_count" type="integer" defaultValueNumeric="0">
				<constraints nullable="false"/>
			</column>
			<column name="success_attempts_day_count" type="integer" defaultValueNumeric="0">
				<constraints nullable="false"/>
			</column>
		</addColumn>
	</changeSet>
</databaseChangeLog>
