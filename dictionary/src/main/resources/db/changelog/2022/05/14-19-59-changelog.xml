<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="2022-05-14-19-59" author="Ilya Malyshev">
        <createTable tableName="words">
            <column name="id" type="VARCHAR(36)" defaultValueComputed="(UUID())">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="TINYTEXT">
                <constraints nullable="false"/>
            </column>
            <column name="transcription" type="TINYTEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>